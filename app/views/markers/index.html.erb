<h1>Listing markers</h1>

<table>
  <thead>
    <tr>
      <th>Lat</th>
      <th>Long</th>
      <th>Description</th>
     <!--  <th>Rou</th> -->
      <th>Stop number</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <% unless marker.stop_no.nil? %>
      <tr>
        <td><%= marker.lat %></td>
        <td><%= marker.lon %></td>
        <td><%= marker.description %></td>
        <td><%= marker.stop_no%></td>
        <!-- <td><%= marker.rou %></td> -->
        <td><%= link_to 'Show', [marker.rou, marker] %></td>
        <td><%= link_to 'Edit', edit_rou_marker_path(marker.rou, marker) %></td>
        <td><%= link_to 'Destroy', [marker.rou, marker], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', rou_path(@rou) %> |
<%= link_to 'New Marker', new_rou_marker_path %>
